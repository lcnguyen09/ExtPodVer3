mutation SignIn($signInInput: SignInInput!) {
    signIn(signInInput: $signInInput) {
        ...AuthResponse
    }
}

mutation SignUp($signUpInput: SignUpInput!) {
    signUp(signUpInput: $signUpInput) {
        ...SignUpResponse
    }
}
mutation SignOut {
    signOut {
        ...SignOutResponse
    }
}

mutation SaveUser($inputUser: InputUser!) {
    saveUser(inputUser: $inputUser) {
        ...UserMutateResponse
    }
}

mutation DeleteUser($id: ID!) {
    deleteUser(id: $id) {
        ...UserMutateResponse
    }
}

mutation SaveUserPermission($id: ID!, $inputPermissions: [InputPermission!]) {
    saveUserPermission(id: $id, permissions: $inputPermissions) {
        ...User
        permissions {
            ...Permission
        }
    }
}