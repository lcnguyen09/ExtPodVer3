fragment Organization on Organization {
    _id
    name
    description
    user_id
    user {
        ...User
    }
    members {
        ...User
    }
    total_workspaces
    total_tasks
    created_at
    updated_at
}

fragment OrganizationDetail on Organization {
    ...Organization
}


fragment OrganizationMutationResponse on OrganizationMutationResponse {
    success
    message
    organization {
        ...OrganizationDetail
    }
    errorFields {
        ...ErrorFieldResponse
    }
}