{
  "manifest_version": 3,
  "version": "1.0",
  "name": "PodOrder orders & tracking tool",
  "description": "PodOrder orders & tracking tool.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon32.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.etsy.com/*"
      ],
      "js": [
        "lib/jquery-2.2.3.min.js",
        "lib/bootstrap.min.js",
        "lib/lodash.min.js",
        "lib/select2.min.js",
        "src/tool.js",
        "src/index.js"
      ],
      "css": [
        "css/select2.min.css",
        "css/style.css"
      ],
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "matches": ["<all_urls>"],
      "resources": [
        "images/*",
        "css/*",
        "template/*",
        "icons/*",
        "themify/*",
        "injection/*"
      ]
    }
  ],
  "action": {
    "default_icon": {             
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    },
    "default_title": "Report error link",
    "default_popup": "template/popup.html"
  }
}